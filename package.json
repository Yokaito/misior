{
  "name": "misior",
  "description": "Create a new website open source project with nextJs to openTibia Comunnity",
  "version": "0.0.1",
  "private": true,
  "repository": "https://github.com/MITHGaming/mitg.misior",
  "author": "Guilherme Fontes <gui.fontes.amorim@gmail.com> (@guifontes)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript",
    "misior",
    "tibia"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "migrate": "prisma migrate dev",
    "prisma-reset": "prisma migrate reset",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "commit": "cz"
  },
  "dependencies": {
    "@prisma/client": "4.13.0",
    "@tanstack/react-query": "^4.29.5",
    "@trpc/client": "10.21.3-alpha.3",
    "@trpc/next": "10.21.3-alpha.3",
    "@trpc/react-query": "10.21.3-alpha.3",
    "@trpc/server": "10.21.3-alpha.3",
    "@types/node": "18.16.1",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "@vercel/analytics": "^1.0.0",
    "next": "13.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^5.3.10",
    "superjson": "^1.12.3",
    "typescript": "5.0.4",
    "zod": "^3.21.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "pnpm lint --fix",
      "pnpm format"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.39.0",
    "eslint-config-next": "13.3.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prisma": "^4.13.0"
  }
}
